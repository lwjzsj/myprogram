<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/line_music_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="right"
            android:padding="8dp"
            android:layout_weight="1"
            android:background="@color/music_btn_selected"
            android:text="在线音乐"/>
        <TextView
            android:id="@+id/local_music_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:padding="8dp"
            android:layout_weight="1"
            android:background="@color/music_btn_default"
            android:text="本地音乐"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/music_content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <com.example.lwjzsj.music.MusicController
        android:id="@+id/music_controller_layout"
        android:layout_width="match_parent"
        android:layout_height="75dp"></com.example.lwjzsj.music.MusicController>

</LinearLayout>
